	<%= link_to item, class: "conversation-list-link" do %>
		<div class="pure-g">
			<div class="pure-u-3-4">
				<p class="conversation-list-prompt"><%= truncate("#{item.prompt}", length: 165, separator: ' ') %></p>
			</div>
			<div class="pure-u-1-4">
				<p class="conversation-statz"> <%= "#{item.questions.count}" + "Q, "%><span class="num-answers"> <%= "#{item.answers.count}" + "A"%> </span> </p>
			</div>
		</div>
	<% end %>
</li>