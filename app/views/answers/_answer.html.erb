<div class = "answer-area">
	<%= image_tag(answer.question.conversation.user.portrait("normal"), class:"img-circle")%>
	<p class="q-a-metadata">
		<%= @conversation.user.fullname %> | <span class="timestamp"> Answered <%= time_ago_in_words(answer.created_at) %> ago. </span>
	</p>
	<div class = "q-and-a-content">
		<%= answer.content %>
	</div>
</div>