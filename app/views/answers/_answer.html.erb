<div class = "answer-area">
	<div class = "q-and-a-content">
		<%= answer.linked_content.html_safe %>
	</div>
	<div class="q-a-metadata">
		<%= link_to answer.question.conversation.user.fullname, answer.question.conversation.user %> <span class="timestamp"> answered <%= time_ago_in_words(answer.created_at) %> ago. </span>
	</div>
</div>
<% if answer.question.conversation.user == current_user %>
	<div class = "answer-delete-link">
		<%= link_to "delete", answer, method: :delete, data: { confirm: "You sure?" } %>
	</div>
<% end %>