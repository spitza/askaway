<% if current_user && @conversation.user != current_user %>
	<div class = "space-after-big-prompt pure-hidden-phone">&nbsp;</div>
	<div class="pure-g-r">
		<div class ="pure-u-1-5 center">
			<%= image_tag(current_user.portrait("bigger"), class:"img-circle q-pic pure-hidden-phone q-pic-form", alt: "Signed In as #{current_user.name}")%>
		</div>
		<div class ="pure-u-17-24">
			<%= bootstrap_form_for @question do |f| %>
				<div class="field">
					<%= f.text_area :content, placeholder: "Ask #{@conversation.user.fullname} a question...", class:"pure-input-1", hide_label: true %>
					<%= f.hidden_field :conversation_id, :value => @conversation.id %>
					<%= f.hidden_field :user_id, :value => current_user.id %>
					<br>
					<%= f.submit "Ask", class: "btn btn-large btn-success ask-button" %>
				</div>
			<% end %>
		</div>
	</div>
<% elsif @conversation.user != current_user && @conversation.questions.count > 0 %>
	<div class="pure-hidden-tablet pure-hidden-desktop center">
		<%= link_to image_tag("sign-in-with-twitter-gray.png"), "/auth/twitter?origin=#{request.original_url}" %>
	</div>
<% end %>